<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/old_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:singleLine="true"
            android:hint="@string/old_pwd_et"
            android:textColor="@color/light_black"
            android:background="@drawable/other_et_bg"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/new_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:hint="@string/new_pwd_et"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_black"
            android:background="@drawable/other_et_bg"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/cnfrm_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:hint="@string/cnfrm_pwd_et"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_black"
            android:background="@drawable/other_et_bg"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/chnge_pwd_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orange_dark"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/change_pwd_tv"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
